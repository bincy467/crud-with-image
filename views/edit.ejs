<!doctype html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
<body>
  <section class="container">
    <h1 class="my-3 text-center">EDIT</h1>
    <form class="bg-secondary p-4 text-light" action="/participate/<%= participant._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= participant.name %>">
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= participant.email %>" aria-describedby="emailHelp">
      </div>
      <div class="mb-3">
        <label for="phone" class="form-label">Phone</label>
        <input type="tel" class="form-control" id="phone" name="phone" value="<%= participant.phone %>">
      </div>
      <div class="mb-3">
        <label for="topic" class="form-label">Field of interest</label><br>
        <input type="radio" class="form-check-input" id="web" name="topic" value="web development" <% if (participant.topic === 'web development') { %> checked <% } %>>
        <label for="web" class="form-check-label">Web development</label><br>
        <input type="radio" class="form-check-input" id="mobile" name="topic" value="Mobile app development" <% if (participant.topic === 'Mobile app development') { %> checked <% } %>>
        <label for="mobile" class="form-check-label">Mobile app development</label><br>
        <input type="radio" class="form-check-input" id="data" name="topic" value="Data Science" <% if (participant.topic === 'Data Science') { %> checked <% } %>>
        <label for="data" class="form-check-label">Data Science</label><br>
        <input type="radio" class="form-check-input" id="machine" name="topic" value="Machine Learning" <% if (participant.topic === 'Machine Learning') { %> checked <% } %>>
        <label for="machine" class="form-check-label">Machine Learning</label><br>
        <input type="radio" class="form-check-input" id="game" name="topic" value="Game Development" <% if (participant.topic === 'Game Development') { %> checked <% } %>>
        <label for="game" class="form-check-label">Game Development</label>
      </div>
      <div class="mb-3">
        <label for="photo" class="form-label">Upload photo</label>
        <input class="form-control" type="file" id="photo" name="photo">
        <input type="hidden" name="existingPhotoPath" value="<%= participant.photo %>">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <a href="/participants">
      <button class="btn btn-outline-primary my-3">VIEW PARTICIPANTS</button>
    </a>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
